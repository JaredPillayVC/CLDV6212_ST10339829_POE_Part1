@model List<string>

    ViewBag.Title = "Order Processing";
}

<div class="container">
    <h2 class="my-4 text-center">Order Processing</h2>
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Add New Order</h5>
            <form asp-action="OrderProcessing" method="post">
                <div class="form-group">
                    <label for="order">Order Details:</label>
                    <input type="text" name="order" id="order" class="form-control" placeholder="Enter order details" required />
                </div>
                <button type="submit" class="btn btn-primary mt-2">Add Order</button>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Orders in Queue</h5>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Count > 0)
            {
                <table class="table table-bordered">
                    <thead class="thead-light">
                        <tr>
                            <th>Order Details</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var message in Model)
                        {
                            <tr>
                                <td>@message</td>
                                <td class="text-center">
                                    <button class="btn btn-info btn-sm" data-toggle="modal" data-target="#viewOrderModal" data-order="@message">
                                        View
                                    </button>
                                    <button class="btn btn-danger btn-sm" data-toggle="modal" data-target="#deleteOrderModal" data-order="@message">
                                        Delete
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info">No orders found in the queue.</div>
            }
        </div>
    </div>
</div>


<div class="modal fade" id="viewOrderModal" tabindex="-1" aria-labelledby="viewOrderModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="viewOrderModalLabel">View Order Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p id="orderDetails"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="deleteOrderModal" tabindex="-1" aria-labelledby="deleteOrderModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteOrderModalLabel">Delete Order</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this order?</p>
                <p><strong>Order Details:</strong> <span id="deleteOrderDetails"></span></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger">Confirm Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>

        $('#viewOrderModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var order = button.data('order');
            var modal = $(this);
            modal.find('#orderDetails').text(order);
        });


        $('#deleteOrderModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var order = button.data('order');
            var modal = $(this);
            modal.find('#deleteOrderDetails').text(order);
        });
    </script>
}
